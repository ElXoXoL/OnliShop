<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OnliShop" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lightMain</item>
        <item name="colorPrimaryVariant">@color/lightMain</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_bg</item>
        <item name="colorSecondaryVariant">@color/gray_light_bg</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/lightMain</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/splash_grad_turned</item>
    </style>

    <style name="Theme.OnliShop.Inner" parent="Theme.OnliShop">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/lightMain</item>
    </style>

    <style name="SheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>

    <style name="RoundedImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/defaultRadius</item>
    </style>

    <style name="FontedText" parent="">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AutoResizeText" parent="FontedText">
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">12sp</item>
        <item name="autoSizeMaxTextSize">20sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
    </style>
</resources>